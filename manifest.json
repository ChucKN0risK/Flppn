{
  "manifest_version": 2,

  "name": "Flppn Plugin",
  "description": "This extension will add a link in Flppn",
  "version": "1.0",

  "browser_action": {
    "default_title": "Flppn",
    "default_icon": "dev/assets/img/icons/icon_19.png",
    "default_popup": "dev/popup.html"
  },
  "web_accessible_resources": [
    "dev/smartSaveButton/smartSaveButton.html", 
    "dev/smartSaveButton/styles/main.css", 
    "dev/smartSaveMenu/smartSaveMenu.html", 
    "dev/smartSaveMenu/styles/main.css",
    "dev/smartLogin/smartLogin.html", 
    "dev/smartLogin/styles/main.css"
  ],
  "permissions": [
    "http://*/*",
    "https://*/*",
    "activeTab",
    "background",
    "tabs",
    "storage"
  ],
  "icons": {
    "19": "dev/assets/img/icons/icon_19.png",
    "128": "dev/assets/img/icons/icon_128.png"
  },
  "background": {
    "scripts": ["dev/background/background.js"],
    "persistent": false
  },
  "options_page": "dev/options.html",
  "content_scripts": [
    {
      "matches": [
        "*://*.pornhub.com/*", 
        "*://*.youporn.com/*", 
        "*://*.chrome.com/*"
      ],
      "js": [
        "dev/content-scripts/request.js",
        "dev/smartSaveButton/scripts/smartSaveButton.js",
        "dev/smartSaveMenu/scripts/smartSaveMenu.js",
        "dev/smartLogin/scripts/smartLogin.js",
        "dev/content-scripts/panicButton.js"
      ],
      "css": [
        "dev/smartSaveButton/styles/main.css",
        "dev/smartSaveMenu/styles/main.css",
        "dev/smartLogin/styles/main.css"
      ],
      "run_at": "document_end"
    }
  ],
  "incognito": "spanning",
  "devtools_page": "dev/devtools.html"
}