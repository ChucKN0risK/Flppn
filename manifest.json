{
  "manifest_version": 2,

  "name": "Flppn Plugin",
  "description": "This extension will add a link in Flppn",
  "version": "1.0",

  "browser_action": {
    "default_title": "Flppn",
    "default_icon": "assets/img/icons/icon_19.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "activeTab",
    "tabs"
  ],
  "icons": {
    "19": "assets/img/icons/icon_19.png",
    "128": "assets/img/icons/icon_128.png"
  },
  "background": {
    "scripts": ["assets/js/background.js"]
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["assets/js/content.js"]
    }
  ],
  "incognito": "spanning",
  "devtools_page": "devtools.html"
}