{
  "manifest_version": 2,

  "name": "Flppn Plugin",
  "description": "This extension will add a link in Flppn",
  "version": "1.0",

  "browser_action": {
    "default_title": "Flppn",
    "default_icon": "dev/assets/img/icons/icon_19.png",
    "default_popup": "dev/popup/popup.html"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "activeTab",
    "background",
    "tabs"
  ],
  "icons": {
    "19": "dev/assets/img/icons/icon_19.png",
    "128": "dev/assets/img/icons/icon_128.png"
  },
  "background": {
    "scripts": ["dev/background/background.js", "dev/background/request.js", "dev/popup/popup.js"]
  },
  "options_page": "dev/options.html",
  "content_scripts": [
    {
      "matches": ["*://*.pornhub.com/*", "*://*.youporn.com/*"],
      "js": ["dev/smartSaverButton/smartSaverButton.js", "dev/smartSaverMenu/smartSaverMenu.js"],
      "css": ["dev/smartSaverButton/styles/main.css", "dev/smartSaverMenu/styles/main.css"],
      "run_at": "document_end"
    }
  ],
  "incognito": "spanning",
  "devtools_page": "dev/devtools.html"
}